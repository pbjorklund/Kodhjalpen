<%= simple_form_for(@developer, :html => { :class => 'form-vertical' }) do |f| %>
  <%= f.input :first_name,  :input_html => { :class => "span6" } %>
  <%= f.input :last_name,   :input_html => { :class => "span6" } %>
  <%= f.input :occupation,  :input_html => { :class => "span6" } %>
  <%= f.input :email,       :input_html => { :class => "span6" } %>
  <%= f.input :city,        :input_html => { :class => "span6" } %>

  <%= f.button :submit, "Börja göra nytta", :class => 'btn-primary' %>
  <%= link_to "Wimp out", root_path, :type => :reset, :class => "btn btn-danger" %>
<% end %>
